\DeclareDocumentCommand \setcodelanguage{o o m}{%
	\lstset{%
		language=#3,
		commentstyle=\color{OliveGreen}\ttfamily,
		stringstyle=\color{BurntOrange}\ttfamily,
		ndkeywordstyle=\color{Cerulean}\bfseries,
		identifierstyle=\color{Black},
		keywordstyle=\color{Blue}\bfseries,
		float=h
	}
	\ifthenelse { \equal {#1} {} }{}%
	{\lstset{caption=\commandkey{caption}}}% If not empty
	\ifthenelse { \equal {#2} {} }{}%
	{\lstset{label=\commandkey{label}}}% If not empty
}


\lstnewenvironment{javacode}[2][][]
{\setcodelanguage[#1][#2]{Java}}
{}

\lstnewenvironment{jscode}[2][][]
{\setcodelanguage[#1][#2]{JavaScript}}
{}

\lstnewenvironment{pomcode}[2][][]
{\setcodelanguage[#1][#2]{POM}}
{}

\lstnewenvironment{ivycode}[2][][]
{\setcodelanguage[#1][#2]{IVY}}
{}

\lstnewenvironment{htmlcode}[2][][]
{\setcodelanguage[#1][#2]{HTML}}
{}

\lstdefinelanguage{Console}{
	keywords={},
	ndkeywords={\$, \#},
	morestring=[b]',
	morestring=[b]"
}
